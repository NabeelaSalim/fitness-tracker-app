<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white; -fx-padding: 20; -fx-spacing: 20; -fx-alignment: center;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitnesstrackerapp.admin.controller.LoginController">
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../images/user.png" />
      </image>
   </ImageView>

   <!-- Heading Section -->
   <HBox style="-fx-background-color: orange; -fx-padding: 10; -fx-border-radius: 5; -fx-alignment: center;">
      <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Login to Your Account" />
   </HBox>

   <!-- Input Fields -->
   <VBox alignment="CENTER" spacing="10">
      <TextField fx:id="tf_email" promptText="Enter Email" style="-fx-background-color: white; -fx-border-color: orange; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-padding: 5px;">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></TextField>
      <PasswordField fx:id="tf_password" promptText="Enter Password" style="-fx-background-color: white; -fx-border-color: orange; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-padding: 5px;">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></PasswordField>
   </VBox>

   <!-- Buttons Section -->
   <VBox alignment="CENTER" spacing="10">
      <Button fx:id="btn_login" style="-fx-background-color: orange; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0.5, 0, 2);" text="Login" />
      <Button fx:id="btn_signup" style="-fx-text-fill: orange; -fx-font-size: 12px;" text="Don't have an account? Sign Up" />
   </VBox>

   <!-- Error Message Section -->
   <Label fx:id="lblgetstarted" prefHeight="17.0" prefWidth="427.0" style="-fx-text-fill: red; -fx-font-size: 12px; -fx-font-style: italic;" text="" />

</VBox>
